{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi":["error", "always"],
        "quotes":["error", "single"],
        "indent": ["error", 2],
        "max-len": ["error", 80],
        "no-cond-assign": "error",
        "comma-dangle": ["error", {
            "objects":"always"
        }]
    }
}
